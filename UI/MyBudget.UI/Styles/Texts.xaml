<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ext="clr-namespace:MyBudget.UI.ControlExtensions">

    <!--  Sylfaen, Javanese Text, Rockwell  -->
    <Style x:Key="Style.TextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Book Antiqua" />
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="ext:Attached.Color" Value="{StaticResource Brush.Text.Shadow}" />
    </Style>

    <Style
        x:Key="Style.TextBlock.Neon"
        BasedOn="{StaticResource Style.TextBlock}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="15"
                    ShadowDepth="0"
                    Color="{Binding Path=(ext:Attached.Color), RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBlock}}}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="Style.TextBlock.PlainText"
        BasedOn="{StaticResource Style.TextBlock}"
        TargetType="{x:Type TextBlock}" />

</ResourceDictionary>