<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    mc:Ignorable="po">

    <!--  Backround  -->
    <SolidColorBrush x:Key="Brush.Background"
        po:Freeze="True"
        Color="#BB000000" />
    <SolidColorBrush x:Key="Brush.Background.ToolTip"
        po:Freeze="True"
        Color="#000000" />

    <!--  Buttons  -->
    <SolidColorBrush x:Key="Brush.Button.Active"
        po:Freeze="True"
        Color="#0000DD" />
    <SolidColorBrush x:Key="Brush.Button.Active.Shadow"
        po:Freeze="True"
        Color="#0000FF" />

    <SolidColorBrush x:Key="Brush.Button.MosueOver"
        po:Freeze="True"
        Color="#FF0000" />
    <SolidColorBrush x:Key="Brush.Button.MosueOver.Shadow"
        po:Freeze="True"
        Color="#FF9999" />

    <!--  Application contours  -->
    <SolidColorBrush x:Key="Brush.Contour"
        po:Freeze="True"
        Color="#c1d0ff" />
    <Color x:Key="Color.Contour.Shadow">#FFFFFF</Color>

    <!--  Texts  -->
    <SolidColorBrush x:Key="Brush.Text"
        po:Freeze="True"
        Color="#c1d0ff" />
    <Color x:Key="Color.Text.Shadow">#FFFFFF</Color>

</ResourceDictionary>