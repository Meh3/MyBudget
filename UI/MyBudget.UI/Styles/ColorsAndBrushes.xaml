<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Backround  -->
    <SolidColorBrush x:Key="Brush.Background" Color="#88000000" />

    <!--  Buttons  -->
    <SolidColorBrush x:Key="Brush.Button.Active" Color="#0000DD" />
    <SolidColorBrush x:Key="Brush.Button.Active.Shadow" Color="#0000FF" />

    <SolidColorBrush x:Key="Brush.Button.MosueOver" Color="#FF0000" />
    <SolidColorBrush x:Key="Brush.Button.MosueOver.Shadow" Color="#FF9999" />

    <!--  Application contours  -->
    <SolidColorBrush x:Key="Brush.Contour" Color="#c1d0ff" />
    <SolidColorBrush x:Key="Brush.Contour.Shadow" Color="#FFFFFF" />

    <!--  Texts  -->
    <SolidColorBrush x:Key="Brush.Text" Color="#c1d0ff" />
    <Color x:Key="Brush.Text.Shadow">#FFFFFF</Color>

</ResourceDictionary>