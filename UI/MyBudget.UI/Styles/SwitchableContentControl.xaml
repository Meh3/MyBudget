<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:MyBudget.UI.Common"
    xmlns:local="clr-namespace:MyBudget.UI.Styles"
    xmlns:views="clr-namespace:MyBudget.UI.Views">
    <Style TargetType="{x:Type common:SwitchableContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type common:SwitchableContentControl}">
                    <Grid x:Name="PART_Grid">
                        <ContentPresenter x:Name="PART_Content2" ContentSource="Content2" />
                        <ContentPresenter x:Name="PART_Content1" ContentSource="Content1" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>