<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviour="clr-namespace:MyBudget.UI.Behaviors"
    xmlns:ext="clr-namespace:MyBudget.UI.ControlExtensions"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <ControlTemplate x:Key="Tempalte.Window.Main" TargetType="{x:Type Window}">
        <Grid
            Width="{TemplateBinding Width}"
            Height="{TemplateBinding Height}"
            Background="{StaticResource Brush.Background}">

            <Grid.RowDefinitions>
                <RowDefinition Height="52" />
                <RowDefinition Height="*" />
                <RowDefinition Height="17" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Grid.RowSpan="3"
                BorderBrush="{StaticResource Brush.Background.Line}"
                BorderThickness="{StaticResource Thickness.Border}" />

            <Grid
                x:Name="WindowHeader"
                Grid.Row="0"
                Margin="2,2,2,0"
                Background="Transparent">
                <i:Interaction.Behaviors>
                    <behaviour:ControlDragsWindow />
                </i:Interaction.Behaviors>
                <ext:UIButton
                    Width="50"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    Content="{StaticResource PathGometry.Corner.TopRight}"
                    Style="{StaticResource Style.Button.Path}">
                    <i:Interaction.Behaviors>
                        <behaviour:ButtonClickClosesWindow />
                    </i:Interaction.Behaviors>
                </ext:UIButton>
                <Path
                    Width="50"
                    HorizontalAlignment="Left"
                    ext:PathExtension.HelperColor="{StaticResource Color.Active.Selected.Bright}"
                    Data="{StaticResource PathGometry.Corner.TopLeft}"
                    Stroke="{StaticResource Brush.Active.Selected.Fill}"
                    Style="{StaticResource Style.Path.Neon}" />
                <Image
                    Height="20"
                    Margin="2,2,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="{StaticResource Icon.Money}"
                    Stretch="Uniform" />
            </Grid>

            <Grid
                x:Name="WindowContent"
                Grid.Row="1"
                Margin="2,0,2,0">
                <ContentPresenter />
            </Grid>

            <Grid
                x:Name="WindowFooter"
                Grid.Row="2"
                Margin="2,0,2,2">
                <ext:UIButton
                    Width="15"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Style.Button.Base}">
                    <Grid>
                        <Path Data="{StaticResource PathGometry.Corner.BottomRight}" Style="{StaticResource Style.Path.Neon.Button}" />
                        <Thumb>
                            <i:Interaction.Behaviors>
                                <behaviour:ThumbResizesWindow />
                            </i:Interaction.Behaviors>
                            <Thumb.Template>
                                <ControlTemplate>
                                    <Grid Background="Transparent" />
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                </ext:UIButton>
            </Grid>
        </Grid>
    </ControlTemplate>

    <Style x:Key="Style.Window.Main" TargetType="{x:Type Window}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="MinWidth" Value="300" />
        <Setter Property="MinHeight" Value="400" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="Template" Value="{StaticResource Tempalte.Window.Main}" />
    </Style>
</ResourceDictionary>