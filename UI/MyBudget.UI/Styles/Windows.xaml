<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviour="clr-namespace:MyBudget.UI.Behaviors"
    xmlns:ext="clr-namespace:MyBudget.UI.ControlExtensions"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    
    <ControlTemplate x:Key="Tempalte.Window.Main" TargetType="{x:Type Window}">
        <Grid
            Width="{TemplateBinding Width}"
            Height="{TemplateBinding Height}"
            Background="{StaticResource Brush.Background}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                BorderBrush="{StaticResource Brush.Background.Line}"
                BorderThickness="{StaticResource Thickness.Border}" />

            <Grid
                x:Name="WindowBar"
                Grid.Row="0"
                Height="50"
                Background="Transparent">
                <i:Interaction.Behaviors>
                    <behaviour:ControlDragsWindow />
                </i:Interaction.Behaviors>
                <ext:UIButton
                    Width="50"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    Style="{StaticResource Style.Button.Path.Neon.Warning}">
                    <Grid Margin="0,2,2,0">
                        <Path Data="M 0,0 C 0,0 80,20 100,100 L 100 0 Z" Style="{StaticResource Style.Path.Neon}" />
                        <TextBlock
                            Padding="0,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            FontSize="15"
                            FontWeight="UltraBold"
                            Foreground="DarkRed"
                            Text="X" />
                    </Grid>
                    <i:Interaction.Behaviors>
                        <behaviour:ButtonClickClosesWindow />
                    </i:Interaction.Behaviors>
                </ext:UIButton>
            </Grid>

            <Grid x:Name="WindowContent" Grid.Row="1">
                <ext:UIButton
                    Width="15"
                    Height="15"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource Style.Button.Path.Neon}">
                    <Grid Margin="0,0,2,2">
                        <Path Data="M 0,100 C 0,100 80,80 100,0 L 100 100 Z" Style="{StaticResource Style.Path.Neon}" />
                        <Thumb>
                            <i:Interaction.Behaviors>
                                <behaviour:ThumbResizesWindow />
                            </i:Interaction.Behaviors>
                            <Thumb.Template>
                                <ControlTemplate>
                                    <Grid Background="Transparent" />
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                </ext:UIButton>
            </Grid>
        </Grid>
    </ControlTemplate>

    <Style x:Key="Style.Window.Main" TargetType="{x:Type Window}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="MinWidth" Value="300" />
        <Setter Property="MinHeight" Value="400" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="Template" Value="{StaticResource Tempalte.Window.Main}" />
    </Style>
</ResourceDictionary>