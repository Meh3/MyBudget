<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviour="clr-namespace:MyBudget.UI.Behaviors"
    xmlns:ext="clr-namespace:MyBudget.UI.ControlExtensions"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:MyBudget.UI.Styles">
    <ControlTemplate x:Key="Tempalte.Window.Main" TargetType="{x:Type Window}">
        <Grid
            Width="{TemplateBinding Width}"
            Height="{TemplateBinding Height}"
            Background="{StaticResource Brush.Background}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                BorderBrush="{StaticResource Brush.Background.Line}"
                BorderThickness="{StaticResource Thickness.Border}" />

            <Grid
                x:Name="WindowBar"
                Grid.Row="0"
                Height="50"
                Background="Transparent">
                <i:Interaction.Behaviors>
                    <behaviour:ControlCanDragWindow />
                </i:Interaction.Behaviors>

                <Button
                    Width="50"
                    Height="50"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Template="{StaticResource Path.Neon.Corner.Close}" />

            </Grid>

            <Grid x:Name="WindowContent" Grid.Row="1">
                <Thumb
                    Width="20"
                    Height="20"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Template="{StaticResource Path.Neon.Corner.Move}">
                    <i:Interaction.Behaviors>
                        <behaviour:ThumbCanResizeWindow />
                    </i:Interaction.Behaviors>
                </Thumb>
            </Grid>

        </Grid>
    </ControlTemplate>

    <Style x:Key="Style.Window.Main" TargetType="{x:Type Window}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="MinWidth" Value="300" />
        <Setter Property="MinHeight" Value="400" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="Template" Value="{StaticResource Tempalte.Window.Main}" />
    </Style>
</ResourceDictionary>